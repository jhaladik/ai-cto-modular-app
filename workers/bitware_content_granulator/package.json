{
  "name": "bitware-content-granulator",
  "version": "1.0.0",
  "description": "AI-powered content granulation worker for structured knowledge generation",
  "private": true,
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:staging": "wrangler deploy --env staging",
    "tail": "wrangler tail",
    "db:init": "wrangler d1 execute content-granulator-db --file=schema/granulator.sql",
    "db:seed": "wrangler d1 execute content-granulator-db --file=schema/seed.sql",
    "db:reset": "npm run db:init && npm run db:seed",
    "test": "bash test.sh"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240117.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "wrangler": "^3.0.0"
  },
  "dependencies": {
    "openai": "^4.0.0"
  }
}